<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.RaccoltApp.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium">

        <!-- Color indicator -->
        <View
            android:id="@+id/waste_color_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@color/waste_organic" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_waste_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organico"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_collection_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Domani - ore 7:00"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <!-- Reminder icon -->
        <ImageView
            android:id="@+id/iv_reminder"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_lock_idle_alarm"
            android:tint="@color/accent" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>