<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary"
        android:padding="@dimen/padding_medium">

        <TextView
            android:id="@+id/tv_waste_guide_title"
            style="@style/TextAppearance.RaccoltApp.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waste_guide_title"
            android:textColor="@color/white" />

        <!-- Search Bar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="2dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view_materials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                app:queryHint="@string/waste_search_hint"
                app:searchIcon="@android:drawable/ic_menu_search" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Categories Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waste_categories"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_medium" />

            <!-- Categories Grid -->
            <GridLayout
                android:id="@+id/grid_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins">

                <!-- Organic Waste Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_organic"
                    style="@style/Widget.RaccoltApp.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/card_margin"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/waste_organic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/waste_category_organic"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Plastic Waste Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_plastic"
                    style="@style/Widget.RaccoltApp.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/card_margin"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/waste_plastic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/waste_category_plastic"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Paper Waste Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_paper"
                    style="@style/Widget.RaccoltApp.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/card_margin"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/waste_paper" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/waste_category_paper"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Glass Waste Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_glass"
                    style="@style/Widget.RaccoltApp.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/card_margin"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/waste_glass" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/waste_category_glass"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Electronics Waste Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_electronics"
                    style="@style/Widget.RaccoltApp.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/card_margin"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/waste_electronics" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/waste_category_electronics"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- General Waste Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_general"
                    style="@style/Widget.RaccoltApp.CardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="@dimen/card_margin"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center">

                        <View
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/waste_general" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="@string/waste_category_general"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

            <!-- Frequently Searched Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/waste_frequently_searched"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_medium" />

            <!-- Frequently searched items as chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_frequent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tetra Pak"
                    style="@style/Widget.MaterialComponents.Chip.Action" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lampadine"
                    style="@style/Widget.MaterialComponents.Chip.Action" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batterie"
                    style="@style/Widget.MaterialComponents.Chip.Action" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olio esausto"
                    style="@style/Widget.MaterialComponents.Chip.Action" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicinali"
                    style="@style/Widget.MaterialComponents.Chip.Action" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Polistirolo"
                    style="@style/Widget.MaterialComponents.Chip.Action" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
