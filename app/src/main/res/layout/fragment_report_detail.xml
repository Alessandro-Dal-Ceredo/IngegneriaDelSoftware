<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ReportDetailFragment">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:padding="16dp"
        android:contentDescription="Back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/detail_report_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titolo Segnalazione"
                android:textAppearance="?attr/textAppearanceHeadline5" />

            <GridLayout
                android:id="@+id/gl_report_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/detail_report_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Descrizione completa del problema..."
                android:textAppearance="?attr/textAppearanceBody1" />

            <TextView
                android:id="@+id/detail_report_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Città"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                android:id="@+id/detail_report_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Via"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                android:id="@+id/detail_report_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Priorità"
                android:textAppearance="?attr/textAppearanceBody2" />

            <TextView
                android:id="@+id/detail_report_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Autore: nome.cognome"
                android:textAppearance="?attr/textAppearanceCaption" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
