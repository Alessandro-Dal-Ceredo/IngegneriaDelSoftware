<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header with Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary"
            android:padding="@dimen/padding_medium">

            <TextView
                android:id="@+id/tv_calendar_title"
                style="@style/TextAppearance.RaccoltApp.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calendar_title"
                android:textColor="@color/white" />

            <!-- Filter Chips -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_all"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_organic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_organic"
                        app:chipIconTint="@color/waste_organic"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_plastic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_plastic"
                        app:chipIconTint="@color/waste_plastic"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_paper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_paper"
                        app:chipIconTint="@color/waste_paper"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_glass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_glass"
                        app:chipIconTint="@color/waste_glass"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Calendar View -->
        <CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface" />

        <!-- Collection Events List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_events"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/padding_small"
            android:clipToPadding="false"
            tools:listitem="@layout/item_collection_event" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@android:drawable/ic_menu_my_calendar"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/calendar_no_collections"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </LinearLayout>

    <!-- FAB for adding reminders -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="@string/calendar_add_reminder"
        app:backgroundTint="@color/accent"
        app:tint="@color/white"
        app:srcCompat="@android:drawable/ic_menu_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
